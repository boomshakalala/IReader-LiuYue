<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="36px"
    android:paddingLeft="48px"
    android:paddingRight="84px"
    android:paddingBottom="36px">
    <ImageView
        android:id="@+id/bookIv"
        android:layout_width="240px"
        android:layout_height="315px"
        android:src="@drawable/ic_book"
        android:scaleType="centerCrop"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="54px">
        <TextView
            android:id="@+id/bookNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGray"
            android:textSize="12sp"
            android:layout_marginTop="23px"
            android:text="妖妃风华"/>
        <TextView
            android:id="@+id/authorNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:textColor="@color/colorLightGray"
            android:textSize="11sp"
            android:text="残念"/>
        <TextView
            android:id="@+id/bookDescTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGray"
            android:layout_marginTop="30px"
            android:textSize="12sp"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="她，武青颜，军医界的天才，顶级医学硕士，一招穿越沦为天生媚骨的无用庶女。 庶女卑微，那又何妨？她一样活的风生水起。 嫡女使阴，放马过来，踹你上天，踢你遁地，赠你一辈子万劫不复"/>
    </LinearLayout>
</LinearLayout>