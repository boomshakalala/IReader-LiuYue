<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/common_toolbar"/>
    <com.chengx.mvp.widget.auto.AutoScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="69px"
            android:paddingLeft="69px">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="138px">
                <TextView
                    android:id="@+id/phoneRegisterBtn"
                    android:layout_width="0dp"
                    android:layout_height="81px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@drawable/selector_text_color_register"
                    android:background="@drawable/selector_btn_register_type"
                    android:textSize="11sp"
                    android:text="手机号注册"
                    />
                <View
                    android:layout_width="78px"
                    android:layout_height="1px"/>
                <TextView
                    android:id="@+id/emailRegisterBtn"
                    android:layout_width="0dp"
                    android:layout_height="81px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@drawable/selector_text_color_register"
                    android:background="@drawable/selector_btn_register_type"
                    android:textSize="11sp"
                    android:text="邮箱注册"
                    />
            </LinearLayout>
            <EditText
                android:id="@+id/emailEt"
                android:layout_width="match_parent"
                android:layout_height="111px"
                android:layout_marginTop="54px"
                android:paddingLeft="50px"
                android:paddingRight="50px"
                android:background="@drawable/shape_white_black_stroke_rect"
                android:gravity="center_vertical"
                android:textSize="11sp"
                android:textColor="@color/black"
                android:inputType="textEmailAddress"
                android:hint="请输入邮箱"/>
            <LinearLayout
                android:id="@+id/verifyCodeLayout"
                android:layout_width="match_parent"
                android:layout_height="111px"
                android:orientation="horizontal"
                android:background="@drawable/shape_white_black_stroke_rect"
                android:layout_marginTop="54px"
                android:gravity="center_vertical"
                android:paddingLeft="50px"
                android:paddingRight="30px">
                <EditText
                    android:id="@+id/phoneNumEt"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:inputType="phone"
                    android:digits="1234567890"
                    android:hint="请输入手机号"/>
                <TextView
                    android:id="@+id/getVerifyBtn"
                    android:layout_width="153px"
                    android:layout_height="45px"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:background="#f96565"
                    android:gravity="center"
                    android:text="获取验证码"
                    />

            </LinearLayout>
            <EditText
                android:id="@+id/verifyCodeEt"
                android:layout_width="match_parent"
                android:layout_height="111px"
                android:layout_marginTop="54px"
                android:paddingLeft="50px"
                android:paddingRight="50px"
                android:maxEms="6"
                android:digits="1234567890"
                android:background="@drawable/shape_white_black_stroke_rect"
                android:gravity="center_vertical"
                android:textSize="11sp"
                android:textColor="@color/black"
                android:hint="请输入验证码"/>
            <EditText
                android:id="@+id/pwdEt"
                android:layout_width="match_parent"
                android:layout_height="111px"
                android:layout_marginTop="54px"
                android:paddingLeft="50px"
                android:paddingRight="50px"
                android:background="@drawable/shape_white_black_stroke_rect"
                android:gravity="center_vertical"
                android:textSize="11sp"
                android:inputType="textPassword"
                android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIGKLMNOPQRSTUVWXYZ_"
                android:textColor="@color/black"
                android:hint="请输入密码"/>
            <EditText
                android:id="@+id/confirmPwdEt"
                android:layout_width="match_parent"
                android:layout_height="111px"
                android:layout_marginTop="54px"
                android:paddingLeft="50px"
                android:paddingRight="50px"
                android:inputType="textPassword"
                android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIGKLMNOPQRSTUVWXYZ_"
                android:background="@drawable/shape_white_black_stroke_rect"
                android:gravity="center_vertical"
                android:textSize="11sp"
                android:textColor="@color/black"
                android:hint="请确认密码"/>
            <EditText
                android:id="@+id/nickNameEt"
                android:layout_width="match_parent"
                android:layout_height="111px"
                android:layout_marginTop="54px"
                android:paddingLeft="50px"
                android:paddingRight="50px"
                android:background="@drawable/shape_white_black_stroke_rect"
                android:gravity="center_vertical"
                android:textSize="11sp"
                android:textColor="@color/black"
                android:hint="请输入用户昵称"/>
            <TextView
                android:id="@+id/registerBtn"
                android:layout_width="match_parent"
                android:layout_height="81px"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="54px"
                android:background="#3fbfcc"
                android:text="快速注册"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="75px"
                android:gravity="center_vertical">
                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_weight="1"
                    android:background="#bababa"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#bababa"
                    android:text="其他登录方式"
                    android:layout_marginLeft="33px"
                    android:layout_marginRight="33px"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_weight="1"
                    android:background="#bababa"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="51px"
                android:gravity="center">
                <ImageView
                    android:id="@+id/wxRegisterBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_wx_login"/>
                <ImageView
                    android:id="@+id/qqRegisterBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="78px"
                    android:src="@drawable/btn_qq_login"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/wbRegisterBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_wb_login"
                android:layout_gravity="center"
                android:layout_marginTop="51px"/>

        </LinearLayout>
    </com.chengx.mvp.widget.auto.AutoScrollView>

</LinearLayout>