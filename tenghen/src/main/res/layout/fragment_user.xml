<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.chengx.mvp.widget.auto.AutoScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/headerView"
                android:layout_width="match_parent"
                android:layout_height="312px"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/user_head_bg">
                <com.chengx.mvp.widget.CircleImageView
                    android:id="@+id/avatarIv"
                    android:layout_width="177px"
                    android:layout_height="177px"
                    android:layout_marginLeft="108px"
                    app:layout_auto_baseheight="width"
                    android:src="@drawable/ic_user_avatar"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="30px">
                    <TextView
                        android:id="@+id/nickNameTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text="注册/登录"/>
                    <TextView
                        android:visibility="visible"
                        android:id="@+id/userIdTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:text="ID:7771"
                        android:layout_marginTop="13px"
                        android:paddingBottom="7px"
                        android:paddingRight="11px"
                        android:paddingLeft="11px"
                        android:paddingTop="7px"
                        android:background="@drawable/black_round_backgroud"/>

                    <TextView

                        android:visibility="visible"
                        android:id="@+id/phoneNumTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:text="绑定手机"
                        android:layout_marginTop="13px"
                        android:paddingBottom="7px"
                        android:paddingRight="11px"
                        android:paddingLeft="11px"
                        android:paddingTop="7px"
                        android:background="@drawable/black_round_backgroud"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="33px"
                android:paddingBottom="45px"
                android:paddingLeft="84px"
                android:paddingRight="90px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#bfbfbf"
                    android:text="本月累计签到"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_user_sign"
                    android:drawablePadding="27dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40px"
                    android:textColor="@color/color_toolbar"
                    android:text="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="#bfbfbf"
                    android:text="天，去看看"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_find_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ccccce"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="48px"
                android:paddingBottom="48px"
                android:paddingLeft="84px"
                android:paddingRight="90px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#f57486"
                    android:text="我的钱包"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_user_wallet"
                    android:drawablePadding="27dp"/>
                <TextView
                    android:id="@+id/walletTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/colorGrayText"
                    android:text="100藤币"
                    android:layout_marginLeft="55px"/>
                <TextView
                    android:id="@+id/rechargeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:paddingLeft="26px"
                    android:paddingRight="26px"
                    android:paddingTop="16px"
                    android:paddingBottom="16px"
                    android:text="充值"
                    android:background="@drawable/recharge_round_backgroud"
                    android:layout_marginLeft="87px"/>


            </LinearLayout>
            <include
                layout="@layout/item_space_divider"/>
            <RelativeLayout
                android:id="@+id/myShelfBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="48px"
                android:paddingBottom="48px"
                android:paddingLeft="84px"
                android:paddingRight="90px">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorGray"
                    android:text="我的书架"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_user_stacks"
                    android:drawablePadding="28dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_find_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#cccccc"/>
            <RelativeLayout
                android:id="@+id/latestReadBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="48px"
                android:paddingBottom="48px"
                android:paddingLeft="84px"
                android:paddingRight="90px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorGray"
                    android:text="最近阅读"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_user_history"
                    android:drawablePadding="28dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_find_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#cccccc"/>
            <RelativeLayout
                android:id="@+id/rechargeLogBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="48px"
                android:paddingBottom="48px"
                android:paddingLeft="84px"
                android:paddingRight="90px">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorGray"
                    android:text="充值记录"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_user_recharge_log"
                    android:drawablePadding="28dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_find_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#cccccc"/>
            <RelativeLayout
                android:id="@+id/costLogBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="48px"
                android:paddingBottom="48px"
                android:paddingLeft="84px"
                android:paddingRight="90px">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorGray"
                    android:text="消费记录"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_user_cost_log"
                    android:drawablePadding="28dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_find_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#cccccc"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="48px"
                android:paddingBottom="48px"
                android:paddingLeft="84px"
                android:paddingRight="90px"
                android:id="@+id/myCommentBtn">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorGray"
                    android:text="我的评论"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_user_comment"
                    android:drawablePadding="28dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_find_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#cccccc"/>
            <RelativeLayout
                android:id="@+id/myMsgBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="48px"
                android:paddingBottom="48px"
                android:paddingLeft="84px"
                android:paddingRight="90px">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorGray"
                    android:text="我的消息"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_user_message"
                    android:drawablePadding="28dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_find_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#cccccc"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="48px"
                android:paddingBottom="48px"
                android:paddingLeft="84px"
                android:paddingRight="90px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorGray"
                    android:text="下载管理"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_user_download"
                    android:drawablePadding="28dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_find_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <include
                layout="@layout/item_space_divider"/>
            <RelativeLayout
                android:id="@+id/modifyPwdBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="48px"
                android:paddingBottom="48px"
                android:paddingLeft="84px"
                android:paddingRight="90px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorGray"
                    android:text="修改密码"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_user_reset_psd"
                    android:drawablePadding="28dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_find_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#cccccc"/>
            <RelativeLayout
                android:id="@+id/shareBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="48px"
                android:paddingBottom="48px"
                android:paddingLeft="84px"
                android:paddingRight="90px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorGray"
                    android:text="推荐APP给好友"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_user_share"
                    android:drawablePadding="28dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_find_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#cccccc"/>
            <RelativeLayout
                android:id="@+id/problemBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="48px"
                android:paddingBottom="48px"
                android:paddingLeft="84px"
                android:paddingRight="90px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorGray"
                    android:text="常见问题"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_user_question"
                    android:drawablePadding="28dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_find_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#cccccc"/>
            <RelativeLayout
                android:id="@+id/aboutBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="48px"
                android:paddingBottom="48px"
                android:paddingLeft="84px"
                android:paddingRight="90px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorGray"
                    android:text="关于我们"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_user_about"
                    android:drawablePadding="28dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_find_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#cccccc"/>
            <RelativeLayout
                android:id="@+id/settingBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="48px"
                android:paddingBottom="48px"
                android:paddingLeft="84px"
                android:paddingRight="90px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorGray"
                    android:text="设置"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_user_setting"
                    android:drawablePadding="28dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_find_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <include
                layout="@layout/item_space_divider"/>

        </LinearLayout>

    </com.chengx.mvp.widget.auto.AutoScrollView>

</LinearLayout>