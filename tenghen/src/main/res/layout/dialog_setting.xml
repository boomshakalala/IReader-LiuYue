<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/settingView"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="369px"
    android:background="@color/white"
    android:layout_gravity="bottom"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="126dp"
        android:paddingRight="126dp">
        <TextView
            android:id="@+id/addTextSizeBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="#fb9394"
            android:text="A +"/>

        <View
            android:layout_width="1px"
            android:layout_height="22dp"
            android:background="@color/color_spline"
            />
        <TextView
            android:id="@+id/scalTextSizeBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="#383838"
            android:text="A -"/>



    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_spline"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="86dp"
        android:paddingRight="86dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/dayBtn"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:scaleType="fitXY"
                android:src="@drawable/day"/>
            <ImageView
                android:id="@+id/nightBtn"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="22dp"
                android:src="@drawable/night"/>
        </LinearLayout>


        <View
            android:layout_width="1px"
            android:layout_height="22dp"
            android:background="@color/color_spline"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/autoScrollBtn"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:scaleType="fitXY"
                android:src="@drawable/scroll_up"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#383838"
                android:layout_marginLeft="14dp"
                android:textSize="12sp"
                android:text="上下滚动"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_spline"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:orientation="horizontal"
        android:paddingLeft="57dp"
        android:paddingRight="57dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/bg01"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_weight="1"
            android:background="#dcdcdc"/>
        <View
            android:layout_width="19dp"
            android:layout_height="1px"/>
        <TextView
            android:id="@+id/bg02"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_weight="1"
            android:background="#fee8ea"/>
        <View
            android:layout_width="19dp"
            android:layout_height="1px"/>
        <TextView
            android:id="@+id/bg03"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_weight="1"
            android:background="#aab5a7"/>
        <View
            android:layout_width="19dp"
            android:layout_height="1px"/>
        <TextView
            android:id="@+id/bg04"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_weight="1"
            android:background="#acbeca"/>
        <View
            android:layout_width="19dp"
            android:layout_height="1px"/>
        <TextView
            android:id="@+id/bg05"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_weight="1"
            android:background="#cdc7b1"/>

    </LinearLayout>
</LinearLayout>