<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f5f6">
    <include
        layout="@layout/common_toolbar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:paddingLeft="72px"
        android:paddingRight="72px"
        android:paddingBottom="50px"
        android:paddingTop="50px">
        <ImageView
            android:id="@+id/iv_weichat"
            android:layout_width="102px"
            android:layout_height="102px"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:src="@drawable/umeng_socialize_wechat"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="微信帐号"
            android:textColor="#575757"
            android:layout_toRightOf="@id/iv_weichat"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"/>
        <TextView
            android:id="@+id/btn_bind_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:padding="3dp"
            android:text="去绑定"
            android:background="@color/color_toolbar"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_spline"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1px"
        android:background="@color/white"
        android:paddingLeft="72px"
        android:paddingRight="72px"
        android:paddingBottom="50px"
        android:paddingTop="50px">
        <ImageView
            android:id="@+id/iv_qq"
            android:layout_width="102px"
            android:layout_height="102px"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:src="@drawable/umeng_socialize_qq"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="QQ帐号"
            android:textColor="#575757"
            android:layout_toRightOf="@id/iv_qq"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"/>
        <TextView
            android:id="@+id/btn_bind_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:padding="3dp"
            android:text="去绑定"
            android:background="@color/color_toolbar"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_spline"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1px"
        android:background="@color/white"
        android:paddingLeft="72px"
        android:paddingRight="72px"
        android:paddingBottom="50px"
        android:paddingTop="50px">
        <ImageView
            android:id="@+id/iv_sina"
            android:layout_width="102px"
            android:layout_height="102px"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:src="@drawable/umeng_socialize_sina"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="新浪帐号"
            android:textColor="#575757"
            android:layout_toRightOf="@id/iv_sina"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"/>
        <TextView
            android:id="@+id/btn_bind_sina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:padding="3dp"
            android:text="去绑定"
            android:background="@color/color_toolbar"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>