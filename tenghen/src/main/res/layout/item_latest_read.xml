<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="48px"
    android:paddingLeft="48px"
    android:paddingTop="30px"
    android:paddingBottom="30px"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/bookIv"
        android:layout_width="240px"
        android:layout_height="315px"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_book"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="54px"
        >
        <TextView
            android:id="@+id/bookNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:singleLine="true"
            android:text="老公亲亲就过敏"/>
        <TextView
            android:id="@+id/authorNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:textSize="11sp"
            android:text="都包谷"
            android:layout_marginTop="27px"/>
        <TextView
            android:id="@+id/readTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#808080"
            android:layout_marginTop="27px"
            android:text="2017-02-25"
            android:drawableLeft="@drawable/ic_latest_read_history"
            android:gravity="center"
            android:drawablePadding="6dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="34px">
            <ImageView
                android:id="@+id/readBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_latest_read_open"
                />
            <ImageView
                android:id="@+id/delBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_latest_read_delete"
                android:layout_marginLeft="69px"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>