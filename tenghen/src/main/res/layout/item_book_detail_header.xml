<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="48px"
    android:paddingRight="48px"
    android:paddingTop="36px"
    android:paddingBottom="32px">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/bookIv"
            android:layout_width="282px"
            android:layout_height="366px"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_book"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="54px"
            android:layout_marginTop="26px">
            <TextView
                android:id="@id/bookNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#565656"
                android:textSize="13sp"
                android:text="老公亲亲就过敏"/>
            <TextView
                android:id="@+id/authorNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="29px"
                android:textColor="#3dbfcc"
                android:textSize="12sp"
                android:text="豆包姑"/>
            <TextView
                android:id="@+id/wordCountTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#818181"
                android:layout_marginTop="29px"
                android:textSize="11sp"
                android:text="21.8万字"/>
            <TextView
                android:id="@+id/priceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#818181"
                android:layout_marginTop="29px"
                android:textSize="11sp"
                android:text="500藤币/千字"
                />
            <TextView
                android:id="@+id/bookStatusTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:paddingLeft="17px"
                android:paddingRight="17px"
                android:paddingTop="5px"
                android:paddingBottom="5px"
                android:background="#ec6b8a"
                android:layout_marginTop="30px"
                android:text="连载中..."/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="30px">
        <TextView
            android:layout_width="42px"
            android:layout_height="42px"
            android:text="读"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:background="#ec6b8a"/>
        <TextView
            android:id="@+id/lastReadChapterTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#818181"
            android:textSize="10sp"
            android:layout_marginLeft="50px"
            android:text="已读   第一章   飞扬时光飞扬时光"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/readBookBtn"
            android:layout_width="150px"
            android:layout_height="42px"
            android:textSize="11sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="#6dd9e5"
            android:text="读下一章"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#595959"
            android:textSize="11sp"
            android:layout_marginTop="30px"
            android:text="作品简介："/>
        <TextView
            android:id="@+id/bookDescTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#818181"
            android:textSize="11sp"
            android:layout_marginTop="18px"
            android:text="她，武青颜，军医界的天才，顶级医学硕士，一招穿越沦为天生媚骨的无用庶女。 庶女卑微，那又何妨？她一样活的风生水起。 嫡女使阴，放马过来，踹你上天，踢你遁地，赠你一辈子万劫不复。"
            android:lineSpacingExtra="6dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="30px"
        android:background="@color/colorSplineLine"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/chapterListBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#575757"
            android:text="查看目录"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ea6b89"
            android:textSize="11sp"
            android:text="最新更新"
            android:layout_marginLeft="39px"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_vip"
            android:layout_marginLeft="31px"
            />
        <TextView
            android:id="@+id/lastUpdateChapterTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8px"
            android:textColor="#969696"
            android:textSize="11sp"
            android:text="第232章  飞扬时刻"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_find_arrow"/>
    </LinearLayout>


</LinearLayout>