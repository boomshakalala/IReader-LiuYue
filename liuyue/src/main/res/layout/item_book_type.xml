<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="30px"
    android:paddingBottom="30px"
    android:paddingLeft="48px"
    android:paddingRight="88px">
    <ImageView
        android:id="@+id/bookIv"
        android:layout_width="238px"
        android:layout_height="315px"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_book"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="54px">
        <TextView
            android:id="@+id/bookNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorGray"
            android:text="老公亲亲就过敏"
            android:layout_marginTop="28px"/>
        <TextView
            android:id="@+id/wordCountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/bookNameTv"
            android:layout_alignParentRight="true"
            android:textColor="#3fbecd"
            android:textSize="8sp"
            android:text="5000字"/>
        <TextView
            android:id="@+id/authorNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bookNameTv"
            android:layout_marginTop="34px"
            android:textSize="11sp"
            android:textColor="#808080"
            android:text="豆包姑"/>

        <TextView
            android:id="@+id/clickCountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/authorNameTv"
            android:layout_alignParentRight="true"
            android:textColor="#f8748b"
            android:textSize="8sp"
            android:text="9.7万人次"/>
        <TextView
            android:id="@+id/bookDescTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/authorNameTv"
            android:layout_marginTop="37px"
            android:maxLines="3"
            android:textSize="11sp"
            android:textColor="#808080"
            android:text="她，武青颜，军医界的天才，顶级医学硕士，一招穿越沦为天生媚骨的无用庶女。 庶女卑微，那又何妨？她一样活的风生水起。 嫡女使阴，放马过来，踹你上天，踢你遁地，赠你一辈子万劫不复"
            />
    </RelativeLayout>




</LinearLayout>