<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f5">
    <include
        layout="@layout/common_toolbar"/>
    <RelativeLayout
        android:layout_marginTop="90px"
        android:paddingLeft="72px"
        android:paddingRight="72px"
        android:paddingBottom="60px"
        android:paddingTop="60px"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/moneyTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="余额：100腾币"
            android:textColor="#575757"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#8c8c8c"
            android:textSize="14sp"
            android:text="1元=100腾币"
            android:layout_alignBaseline="@id/moneyTv"
            android:layout_toRightOf="@id/moneyTv"
            android:layout_marginLeft="35px"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/btn_recharge_alipay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1px"
        android:background="@color/white"
        android:paddingLeft="72px"
        android:paddingRight="72px"
        android:paddingBottom="60px"
        android:paddingTop="60px">
        <ImageView
            android:id="@+id/iv_alipay"
            android:layout_width="102px"
            android:layout_height="102px"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_alipay"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="支付宝支付"
            android:textColor="#575757"
            android:layout_toRightOf="@id/iv_alipay"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_find_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/btn_recharge_wechat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1px"
        android:background="@color/white"
        android:paddingLeft="72px"
        android:paddingRight="72px"
        android:paddingBottom="60px"
        android:paddingTop="60px">
        <ImageView
            android:id="@+id/iv_weichat"
            android:layout_width="102px"
            android:layout_height="102px"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_weichat"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="微信支付"
            android:textColor="#575757"
            android:layout_toRightOf="@id/iv_weichat"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_find_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</LinearLayout>