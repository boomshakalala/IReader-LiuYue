<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f3f4f6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="30px"
        android:paddingTop="33px"
        android:paddingBottom="60px">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="42px"
            android:paddingRight="42px">

            <ImageView
                android:id="@+id/pointIv"
                android:layout_width="16px"
                android:layout_height="16px"
                android:background="@color/black"
                android:layout_marginTop="13px"/>
            <TextView
                android:id="@+id/topicTitleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="福利计划，签约有礼"
                android:layout_toRightOf="@id/pointIv"
                android:layout_marginLeft="18px"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/topicTitleTv"
                android:layout_below="@id/topicTitleTv"
                android:layout_marginTop="20px"
                android:textColor="#aaaaaa"
                android:textSize="10sp"
                android:text="立志于腾痕书院长期创作的网络名家和潜力作者"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_book"
            android:layout_marginTop="10px"/>

    </LinearLayout>

</LinearLayout>