<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">
    <include
        layout="@layout/common_toolbar"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96px"
        android:src="@drawable/logo"/>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="81px"
        android:layout_marginLeft="69px"
        android:layout_marginRight="69px"
        android:layout_marginTop="54px"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/phoneRegisterBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@drawable/selector_text_color_register"
            android:background="@drawable/selector_btn_register_type"
            android:textSize="11sp"
            android:text="手机号登录"
            />
        <View
            android:layout_width="78px"
            android:layout_height="1px"/>
        <TextView
            android:id="@+id/emailRegisterBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@drawable/selector_text_color_register"
            android:background="@drawable/selector_btn_register_type"
            android:textSize="11sp"
            android:text="邮箱登录"
            />
    </LinearLayout>
    <EditText
        android:id="@+id/loginUserNameEt"
        android:layout_width="match_parent"
        android:layout_height="111px"
        android:layout_marginLeft="69px"
        android:layout_marginRight="69px"
        android:layout_marginTop="54px"
        android:background="@drawable/shape_white_black_stroke_rect"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:paddingLeft="48px"
        android:paddingRight="48px"
        android:singleLine="true"
        android:hint="手机号/邮箱/个性账户"/>
    <EditText
        android:id="@+id/loginPasswordEt"
        android:layout_width="match_parent"
        android:layout_height="111px"
        android:layout_marginLeft="69px"
        android:layout_marginRight="69px"
        android:layout_marginTop="54px"
        android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIGKLMNOPQRSTUVWXYZ_"
        android:background="@drawable/shape_white_black_stroke_rect"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:paddingLeft="48px"
        android:paddingRight="48px"
        android:singleLine="true"
        android:inputType="textPassword"
        android:hint="密码"/>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/verifyCodeLayout"
        android:layout_width="match_parent"
        android:layout_height="111px"
        android:layout_marginLeft="69px"
        android:layout_marginRight="69px"
        android:paddingLeft="48px"
        android:paddingRight="48px"
        android:layout_marginTop="54px"
        android:background="@drawable/shape_white_black_stroke_rect">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:text="验证码"/>
        <EditText
            android:id="@+id/verifyCodeEt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="111px"
            android:layout_marginLeft="51px"
            android:background="@null"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:singleLine="true"
            android:inputType="number"
            android:maxLength="6"
            android:digits="0123456789"
            android:hint="请输入验证码"/>
        <TextView
            android:id="@+id/getVerifyBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#1585b1"
            android:text="获取"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/resetPwdBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="54px">
        <ImageView
            android:layout_width="60px"
            android:layout_height="60px"
            android:src="@drawable/ic_check"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="27px"
            android:textSize="12sp"
            android:text="记住密码"/>

        <ImageView
            android:layout_width="60px"
            android:layout_height="60px"
            android:src="@drawable/ic_reset_password"
            android:layout_marginLeft="132px"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="27px"
            android:textSize="12sp"
            android:text="忘记密码"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="51px"
        android:gravity="center">
        <TextView
            android:id="@+id/loginBtn"
            android:layout_width="405px"
            android:layout_height="81px"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="#f96565"
            android:text="登录"
            />
        <TextView
            android:id="@+id/registerBtn"
            android:layout_width="405px"
            android:layout_height="81px"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="#3fbfcc"
            android:layout_marginLeft="78px"
            android:text="注册"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="75px"
        android:gravity="center_vertical">
        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="#bababa"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#bababa"
            android:text="其他登录方式"
            android:layout_marginLeft="33px"
            android:layout_marginRight="33px"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="#bababa"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="51px"
        android:gravity="center">
        <ImageView
            android:id="@+id/wxLoginBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_wx_login"/>
        <ImageView
            android:id="@+id/qqLoginBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="78px"
            android:src="@drawable/btn_qq_login"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/wbLoginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_wb_login"
        android:layout_marginTop="51px"/>

</LinearLayout>