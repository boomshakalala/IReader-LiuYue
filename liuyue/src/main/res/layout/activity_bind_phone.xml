<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include
        layout="@layout/common_toolbar"/>
    <LinearLayout
        android:id="@+id/phoneLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="96px"
        android:layout_marginRight="96px"
        android:paddingLeft="48px"
        android:paddingRight="48px"
        android:layout_marginTop="54px"
        android:background="@drawable/shape_white_black_stroke_rect">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:text="手机号"/>
        <EditText
            android:id="@+id/phoneEt"
            android:layout_width="match_parent"
            android:layout_height="111px"
            android:layout_marginLeft="98px"
            android:background="@null"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:singleLine="true"
            android:inputType="phone"
            android:hint="请输入手机号"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="96px"
        android:layout_marginRight="96px"
        android:paddingLeft="48px"
        android:paddingRight="48px"
        android:layout_marginTop="54px"
        android:background="@drawable/shape_white_black_stroke_rect">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:text="验证码"/>
        <EditText
            android:id="@+id/verifyCodeEt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="111px"
            android:layout_marginLeft="51px"
            android:background="@null"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:singleLine="true"
            android:inputType="number"
            android:maxLength="6"
            android:digits="0123456789"
            android:hint="请输入验证码"/>
        <TextView
            android:id="@+id/getVerifyBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#1585b1"
            android:text="获取"/>
    </LinearLayout>

    <Button
        android:id="@+id/bindBtn"
        android:layout_width="match_parent"
        android:layout_height="81px"
        android:layout_marginLeft="96px"
        android:layout_marginRight="96px"
        android:layout_marginTop="53px"
        android:textSize="16sp"
        android:background="@color/color_toolbar"
        android:textColor="@color/white"
        android:text="确定"/>

</LinearLayout>